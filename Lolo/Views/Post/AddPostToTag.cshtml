@model PostTag


<form asp-action="AddPostToTag" asp-controller="Post" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for=TagId class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <select asp-for=TagId class="form-control" asp-items=@ViewBag.Tags>
                @*<option selected="selected" disabled="disabled">Select Genre</option>*@
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Add tag" />
        </div>
    </div>

</form>
